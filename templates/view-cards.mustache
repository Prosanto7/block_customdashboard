{{!
    @template block_customdashboard/view-cards

    This template renders the cards view for the customdashboard block.

    Context variables required for this template:
    * courses - Array of courses
}}

<div class="card-grid mx-0 row row-cols-1 row-cols-sm-2 row-cols-lg-3" data-region="card-deck" role="list">
{{#courses}}
    <div class="col d-flex px-0 mb-2">
        {{> block_customdashboard/coursecard }}
    </div>
{{/courses}}
</div>
