{{!
    @template block_customdashboard/teachers-card

    Reusable Teachers Card component.

    Context variables required for this template:
    * teachers - Object with teachers data
}}

<div class="card mb-3">
    <div class="card-header">
        <h5 class="mb-0">{{#str}}teachers, block_customdashboard{{/str}}</h5>
    </div>
    <div class="card-body">
        {{#teachers.hasitems}}
        <div class="list-group teachers-list-container teachers-scrollable">
            {{#teachers.items}}
            <div class="list-group-item">
                <div class="d-flex align-items-center">
                    <div class="me-3">
                        {{{picture}}}
                    </div>
                    <div class="flex-grow-1">
                        <h6 class="mb-1">{{fullname}}</h6>
                        <p class="mb-1 small">
                            {{#pix}}t/email, core{{/pix}} {{email}}
                        </p>
                        {{#hasphone}}
                        <p class="mb-1 small">
                            <i class="icon fa fa-phone"></i> {{phone}}
                        </p>
                        {{/hasphone}}
                        <p class="mb-0 small">
                            {{#pix}}i/course{{/pix}} {{courseslist}}
                        </p>
                    </div>
                </div>
            </div>
            {{/teachers.items}}
        </div>
        {{/teachers.hasitems}}
        {{^teachers.hasitems}}
        <p class="text-muted">{{#str}}noteachers, block_customdashboard{{/str}}</p>
        {{/teachers.hasitems}}
    </div>
</div>
